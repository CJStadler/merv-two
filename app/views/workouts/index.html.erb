<%= render partial: "calendar_controller", locals: {year: @year, month: @month} %>
<% @n_months.times do %>
    <%= render partial: "month", locals: {year: @year, month: @month} %>
    <%
        @month += 1
        if @month > 12
            @month = 1
            @year += 1
        end
    %>
<% end %>
