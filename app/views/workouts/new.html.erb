<%= form_for [@log, @workout] do |f| %>
    <div>
        <%= f.label(:date) %>
        <%= f.date_field(:date) %>
    </div>
    <div>
        <%= f.label(:distance) %>
        <%= f.number_field(:distance, min: 0) %>
        <%= f.label(:duration) %>
        <%= f.number_field(:duration, min: 0) %>
    </div>
    <div>
        <%= f.label(:title) %>
        <%= f.text_field(:title) %>
    </div>
    <div>
        <%= f.label(:details) %>
        <%= f.text_area(:details) %>
    </div>
    <div>
        <%= f.label(:shoe_id) %>
        <%= f.collection_select(:shoe_id, @log.shoes, :id, :name, :include_blank => true) %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>
