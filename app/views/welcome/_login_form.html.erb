<form id="login" action="/authenticate" method="post">
    <%= token_tag %>
    <div>
        <div class="label-container">
            <label for="login-name">User Name</label>
        </div>
        <div class="input-container">
            <input type="text" id="login-name" name="user[name]" required>
        </div>
    </div>
    <div>
        <div class="label-container">
            <label for="login-password">Password</label>
        </div>
        <div class="input-container">
            <input type="password" id="login-password" name="user[password]" required>
        </div>
    </div>
    <div>
        <input type="submit" value="Sign In">
    </div>
</form>
