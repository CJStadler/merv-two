<% if logged_in? %>
    <p>Logged in as: <%= @current_user.name %></p>
    <p><%= link_to("Sign Out", "/logout") %></p>
<% else %>
    <%= render partial: "welcome/login_form" %>
<% end %>

<%= render partial: "get_log" %>

<h1>Log: <%= @log.name %></h1>
<%= render partial: "workouts/search_form", locals: {log: @log} %>
<%= render partial: "calendar_controller", locals: {log: @log, year: @year, month: @month} %>
<section id="calendar">
    <% first_of_current_month = @start_day.beginning_of_month %>
    <% @n_months.times do %>
        <%= render partial: "month", locals: {
                                                log: @log,
                                                first_of_month: first_of_current_month,
                                                focus_day: @focus_day
                                            } %>
        <%
            first_of_current_month += 1.month
        %>
    <% end %>
    <script type="text/javascript">
        var focus_month = document.getElementById("focus-month");
        focus_month.scrollIntoViewIfNeeded(true);
    </script>
</section>
